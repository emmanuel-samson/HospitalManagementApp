@model List<HospitalManagementApp.Models.Enitities.Doctor>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Specialty</th>
                <th>Actions</th> <!-- Added a new column for actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Id</td>
                    <td>@doctor.Name</td>
                    <td>@doctor.Specialty</td>
                    <!-- Actions column with Update and Delete buttons -->
                    <td>
                        <!-- View Button (will navigate to view page) -->
                        <a asp-action="ViewDoctor" asp-route-id="@doctor.Id" class="btn btn-info btn-sm" style="margin-right: 5px;">View</a>

                        <!-- Update Button (will navigate to edit page) -->
                        <a href="@Url.Action("UpdateDoctor", "Doctor", new { id = doctor.Id })" class="btn btn-primary btn-sm" style="margin-right: 5px;">
                            Update
                        </a>

                        <!-- Delete Button (form to delete the doctor) -->
                        <form action="@Url.Action("DeleteDoctor", "Doctor", new { id = doctor.Id })" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success" href="@Url.Action("AddDoctor", "Doctor")" style="font-weight: 500;">Add New Doctor</a>
</div>